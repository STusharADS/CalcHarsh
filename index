    }
    .calculator {
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      padding: 20px;
      width: 360px;
    }
    .display {
      background: #f1f1f1;
      border-radius: 10px;
      padding: 15px;
      font-size: 2rem;
      text-align: right;
      margin-bottom: 20px;
      overflow-x: auto;
    }
    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }
    button {
      padding: 20px;
      font-size: 1.2rem;
      border: none;
      border-radius: 12px;
      background: #e0e0e0;
      cursor: pointer;
      transition: background 0.2s;
    }
    button.operator {
      background-color: #0077ff;
